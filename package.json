{
  "name": "create-gmacko-app",
  "private": true,
  "engines": {
    "node": "^22.21.0",
    "pnpm": "^10.19.0"
  },
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "setup": "./scripts/setup.sh",
    "provision": "./scripts/provision.sh",
    "auth:generate": "pnpm -F @gmacko/auth generate",
    "db:push": "turbo -F @gmacko/db push",
    "db:studio": "turbo -F @gmacko/db studio",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @gmacko/nextjs...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test -- --coverage",
    "e2e": "turbo run e2e",
    "e2e:web": "turbo run e2e -F @gmacko/nextjs",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter='@gmacko/mcp-server' --filter='@gmacko/trpc-client' && changeset publish",
    "ui-add": "turbo run ui-add",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.0",
    "@gmacko/prettier-config": "workspace:*",
    "@turbo/gen": "^2.5.8",
    "dotenv-cli": "^10.0.0",
    "prettier": "catalog:",
    "turbo": "^2.5.8",
    "typescript": "catalog:"
  },
  "prettier": "@gmacko/prettier-config"
}
