{
  "name": "@gmacko/api",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./openapi": {
      "types": "./dist/openapi.d.ts",
      "default": "./src/openapi.ts"
    },
    "./versioning": {
      "types": "./dist/versioning.d.ts",
      "default": "./src/versioning.ts"
    },
    "./deprecation": {
      "types": "./dist/middleware/deprecation.d.ts",
      "default": "./src/middleware/deprecation.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules coverage",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@gmacko/auth": "workspace:*",
    "@gmacko/config": "workspace:*",
    "@gmacko/db": "workspace:*",
    "@gmacko/validators": "workspace:*",
    "@trpc/server": "catalog:",
    "superjson": "2.2.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@gmacko/eslint-config": "workspace:*",
    "@gmacko/prettier-config": "workspace:*",
    "@gmacko/tsconfig": "workspace:*",
    "@gmacko/vitest-config": "workspace:*",
    "eslint": "catalog:",
    "openapi-types": "^12.1.3",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vitest": "^3.2.3"
  },
  "prettier": "@gmacko/prettier-config"
}
